<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 应用主日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/springboot.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/springboot.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 代理服务器专用日志文件 -->
    <appender name="PROXY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/proxy.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/proxy.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 代理相关类的日志配置 -->
    <logger name="com.khm.group.center.task.ProxyHealthCheckScheduler" level="INFO" additivity="false">
        <appender-ref ref="PROXY_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.khm.group.center.service.ProxyHealthCheckService" level="INFO" additivity="false">
        <appender-ref ref="PROXY_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.khm.group.center.config.ProxyConfigLoader" level="INFO" additivity="false">
        <appender-ref ref="PROXY_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.khm.group.center.datatype.config.ProxyConfigManager" level="INFO" additivity="false">
        <appender-ref ref="PROXY_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 根日志配置 -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>